<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/elevation_10"
    android:id="@+id/container">

    <!-- Foto Profil -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/elevation_16"
        android:layout_marginTop="@dimen/marginTop_16"
        android:src="@drawable/ic_person"
        android:scaleType="centerCrop"/>

    <!-- Nama Pengguna -->
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profileImage"
        android:layout_marginStart="@dimen/elevation_16"
        android:layout_marginTop="@dimen/marginTop_16"
        android:text="Your Friend"
        android:textSize="@dimen/elevation_16"
        android:textStyle="bold"/>

    <!-- Pesan Terakhir -->
    <TextView
        android:id="@+id/lastMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_toEndOf="@id/profileImage"
        android:layout_marginStart="@dimen/elevation_16"
        android:text="Hello there!"
        android:textSize="@dimen/elevation_14"
        android:textColor="@android:color/darker_gray"/>

    <!-- Waktu Terakhir -->
    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/elevation_16"
        android:layout_marginTop="@dimen/marginTop_16"
        android:text="12:34 PM"
        android:textSize="@dimen/elevation_12"
        android:textStyle="italic"
        android:textColor="@android:color/darker_gray"/>

</RelativeLayout>

